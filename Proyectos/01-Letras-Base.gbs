    H       when (códigoLetra == 18)
    I       when (códigoLetra == 19)
    J       when (códigoLetra == 20)
    K       when (códigoLetra == 21)
    L       when (códigoLetra == 22)
    M       when (códigoLetra == 23)
    N       when (códigoLetra == 24)
    Ñ       when (códigoLetra == 25)
    O       when (códigoLetra == 26)
